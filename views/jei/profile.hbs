                        <button class="btn"><img src="../media/comment.png" alt="Comment"></button>
                        <button class="btn" onclick="liked('like-1')"><img src="../media/upvote.png" alt="Thumbs Up" id="like-1"></button>
                        <button class="btn" onclick="disliked('dislike-1')"><img src="../media/downvote.png" alt="Thumbs Down" id="dislike-1"></button>
                        <button class="btn"><img src="../media/share.png" alt="Share"></button>
                        <a href="../lui/edit_post_1.html" class="btn"><img src="../media/edit-post.png" alt="Edit"></a>
                        <button class="btn"><img src="../media/delete-post.png" alt="Delete"></button>
                    </div>
                </div>

