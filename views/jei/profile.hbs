    </head>
    <body>

        <header>
            <div id="logo_bg">
                <img src="../media/ellipse.png">
            </div>
            <div id="logo">
                <img src="../media/logo.png">
            </div>
            <div id="headerText">Pots & Posts</div>
        </header>

        <main>
            <div id="left" class="sidebar">
                <div id="user">
                    <a href="/profile">
                    <img src="profilePics/{{userData.userID}}.jpg">
                    <p>{{userData.username}}</p>
                    </a>
                </div>
                <div id="sidebarMenu">  
                    <a href="/main_forum">
                    <div id="home" class="container">
                        <img src="../media/home.png">
                        <p>Home</p>
                    </div></a>
                    <div class="container">
                        <img src="../media/settings.png">
                        <p>Settings</p>
                    </div>
                    <a href="/make_post">
                        <div id="post" class="container">
                            <img src="../media/add.png">
                        <p>Post</p>
                    </div></a>
                </div>
            </div>

             <!-- MIDDLE SECTION:-->
             <div id="middle">
                
                <!-- PROFILE at top -->
                <div id="profileBox">
                    <a href="/profile">
                    <!-- profile picture is reached using the user ID since a user is expected to have only one profile picture-->
                    <img id="bigPic" src="profilePics/{{userData.userID}}.jpg">
                    <div id="profileDetails">
                        <h2>{{userData.username}}</h2></a>
                        <p>
                            {{userData.bio}}
                        </p>
                    </div>
                </div>

                {{#each posts}}
                    <div class="posts" id="photopost">
                        <div class="post-header">
                            <span class="post-avatar">
                            <img src="profilePics/{{this.authorID}}.jpg" alt="author">
                            </span>
                            <span class="post-username"><a href="">{{this.author}}</a></span> <!-- Username should link to respective profile -->
                            <span class="post-date">| {{this.date}}</span>
                        </div>
                        <a href="/open_post_logged_in?postId={{this._id}}">          
                        <div id="post_header" class="post_header">{{this.header}}</div>
                        <div id="post_text" class="post_text">{{{this.content}}}</div>
                        <div class="post_photo">
                            {{#if this.img}}
                                <img src="/media/{{this.img}}" alt="{{this.img}}">
                            {{/if}}
                        </div></a>
                        <div class="post-actions">
                            <div class="interactions">
                                <button class="btn" id="comment4" onclick="addPopUp('comment4', 'close_comment_popUp', 'comment_popUp')">
                                    <img src="../media/comment.png" alt="Comment">
                                </button>
                                <button class="btn" onclick="liked('like-4')"><img src="../media/upvote.png" alt="Thumbs Up" id="like-4"></button>
                                <button class="btn" onclick="disliked('dislike-4')"><img src="../media/downvote.png" alt="Thumbs Down" id="dislike-4"></button>
                                <button class="btn"><img src="../media/share.png" alt="Share"></button>
                            </div>
                        </div>
                    </div>
                {{/each}}

                <!-- FIRST POST >
                <div id="post_box" class="post_box">
