<!DOCTYPE html>
<html>
    <head>
        <title>Pots & Posts</title>
        <link rel="stylesheet" href="main_style.css">
        <link rel="stylesheet" href="lui/LUIstyle.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Julius+Sans+One&display=swap" rel="stylesheet">
    </head>
    <body>

        <header>
            <div id="logo_bg">
                <img src="../media/ellipse.png">
            </div>
            <div id="logo">
                <img src="../media/logo.png">
            </div>
            <div id="headerText">Pots & Posts</div>
        </header>

        <main>

            <!-- LEFT SIDEBAR -->
            <div id="left" class="sidebar">
                <div id="user">
                    <a href="/profile">
                    <img src="profilePics/{{userData.userID}}.jpg">
                    <p>{{userData.username}}</p>
                    </a>
                </div>
                <div id="sidebarMenu">  
                    <a href="/main_forum"><div id="home" class="container">
                        <img src="../media/home.png">
                        <p>Home</p>
                    </div></a> 
                    <a href="#"><div class="container">
                        <img src="../media/settings.png">
                        <p>Settings</p>
                    </div></a>
                    <a href="/make_post"><div id="post" class="container">
                        <img src="../media/add.png">
                        <p>Post</p>
                    </div></a>
                </div>
            </div>

            <!-- MIDDLE SECTION:-->
            <div id="middle">
                <!-- POST -->
                <div class="post_box">
                    <a href="/profile"><div class="post_username_section"> <!-- Link should lead to the profile of OP-->
                        <img src="profilePics/{{post.authorID}}.jpg" class="post_profile_pic">
                        <span class="post_username">{{post.author}} | {{post.date}}</span>
                    </div></a>
                    <div id="post_header" class="post_header">{{post.header}}</div>
                    <div id="post_edit_indicator" class="post_edit_indicator"></div>
                    <div id="post_text" class="post_text">{{{post.content}}}</div>
                    {{#if post.img}}
                        <div class="post_photo">
                            <img src="/media/{{post.img}}" alt="{{post.img}}">
                        </div>
                    {{/if}}
                    <div id="post_interactions" class="post_interactions">
                        
                        <button class="btn" id="comment1" onclick="addPopUp('comment1', 'close_comment_popUp', 'comment_popUp')">
                            <img src="../media/comment.png" alt="Comment">
                        </button>

                        <button class="btn" onclick="liked('like-1')"><img src="../media/upvote.png" alt="Thumbs Up" id="like-1"></button>
                        <button class="btn" onclick="disliked('dislike-1')"><img src="../media/downvote.png" alt="Thumbs Down" id="dislike-1"></button>
                        <button class="btn"><img src="../media/share.png" alt="Share"></button>
                        <a href="edit_post_1.html" class="btn"><img src="../media/edit-post.png" alt="Edit"></a>
                        <button class="btn"><img src="../media/delete-post.png" alt="Delete"></button>
                    </div>
                </div>

                {{#each comments}}
                    <div class="comment_box">
                        <a href="/profile"><div class="post_username_section"> <!-- Link should lead to the profile of the commenter-->
                            <img src="profilePics/{{this.authorID}}.jpg" class="post_profile_pic">
                            <span class="post_username">{{this.author}} | {{this.date}}</span>
                        </div></a>
                        <div class="post_edit_indicator"></div>
                        <div class="post_text">{{{this.content}}}</div>
                        <div class="post_interactions">
                            
                            <button class="btn" id="comment2" onclick="addPopUp('comment2', 'close_comment_popUp', 'comment_popUp')">
                                <img src="../media/comment.png" alt="Comment">
                            </button>
                            
                            <button class="btn" onclick="liked('like-2')"><img src="../media/upvote.png" alt="Thumbs Up" id="like-2"></button>
                            <button class="btn" onclick="disliked('dislike-2')"><img src="../media/downvote.png" alt="Thumbs Down" id="dislike-2"></button>

                            <button class="btn"><img src="../media/share.png" alt="Share"></button>
                        </div>
                    </div>
                {{/each}}

                <!--Comment pop-up-->
                <div class="modal btn" id="comment_popUp">
                    <div class="modal-inner">
                        <button id="close_comment_popUp" class="btn"><img src="../media/close.png"></button>
                        <form action="/add_comment" method="POST">
                            <textarea name="commentContent" class="textArea" placeholder="Share your thoughts..." required></textarea>
                            <input type="hidden" name="postId" value="{{post._id}}">
                            <button type="submit" id="post_comment" class="btn">Comment</button>
                        </form>
                    </div>
                </div>

            </div>

            <!-- RIGHT SIDEBAR -->
            <div id="right" class="sidebar">
                <form>
                    <div class="search">
                        <img src="../media/search.png">
                        <input class="search-input" type="search" placeholder="search">
                    </div>
                </form>
            </div>

        </main>

        <script src="lui/javascript.js"></script>
    </body>
</html>
