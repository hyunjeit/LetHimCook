<!DOCTYPE html>
<html>
    <head>
        <title>Pots & Posts</title>
        <link rel="stylesheet" href="nian/style.css">
        <link rel="stylesheet" href="main_style.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Julius+Sans+One&display=swap" rel="stylesheet">
    </head>
    <body>

        <header>
            <div id="logo_bg">
                <img src="../media/ellipse.png">
            </div>
            <div id="logo">
                <img src="../media/logo.png">
            </div>
            <div id="headerText">Pots & Posts</div>
        </header>

        <main>

            <!-- LEFT SIDEBAR -->
            <div id="left" class="sidebar">
                <div id="log-in">
                    <a href="/login">
                    <img src="../media/log-in.png">
                    <p>Log in</p>
                    </a>
                </div>
                <div id="sidebarMenu">  
                    <a href="/main_forum_unauthenticated"><div id="home" class="container current">
                        <img src="../media/home.png">
                        <p>Home</p>
                    </div></a> 
                    <a href="#"><div class="container">
                        <img src="../media/settings.png">
                        <p>Settings</p>
                    </div></a>
                    <a href="/"><div id="post" class="container">
                        <img src="../media/add.png">
                        <p>Post</p>
                    </div></a>
                </div>
            </div>

            <div id="middle">

                {{#each posts}}
                    <div class="posts" id="photopost">
                        <div class="post-header">
                            <span class="post-avatar">
                            <img src="profilePics/{{this.authorID}}.jpg" alt="author">
                            </span>
                            <span class="post-username"><a href="">{{this.author}}</a></span> <!-- Username should link to respective profile -->
                            <span class="post-date">| {{this.date}}</span>
                        </div>
                        <a href="/open_post_logged_out?postId={{this._id}}">
                        <div id="post_header" class="post_header">{{this.header}}</div>
                        <div id="post_text" class="post_text">{{{this.content}}}</div>
                        <div class="post_photo">
                            {{#if this.img}}
                                <img src="/media/{{this.img}}" alt="{{this.img}}">
                            {{/if}}
                        </div></a>
                        <div class="post-actions">
                            <div class="interactions">
                                <button class="btn" id="comment1" onclick="addPopUp('comment1', 'closePopUp', 'log-in_popUp')">
                                    <img src="../media/comment.png" alt="Comment">
                                </button>
                                <button class="btn" onclick="liked('like-1')"><img src="../media/upvote.png" alt="Thumbs Up" id="like-1"></button>
                                <button class="btn" onclick="disliked('dislike-4')"><img src="../media/downvote.png" alt="Thumbs Down" id="dislike-4"></button>
                                <button class="btn"><img src="../media/share.png" alt="Share"></button>
                            </div>
                        </div>
                    </div>
                {{/each}}

                <div class="modal btn" id="log-in_popUp">
                    <div class="modal-inner">
                        <p id="app_name">POTS & POSTS</p>
                        <h1>Where Flavors Meets Stories</h1>
                        <h2>Join the community to comment and post!</h2>
                        <p id="slogan">Share posts full of taste and pots full of love.</p>
                        <a href="/register"><button id="sign-up" class="btn">Create an account</button></a>
                        <p id="question">Already have an account?</p>
                        <a href="/login"><button id="log-in" class="btn">Log in</button></a>
                        <button id="closePopUp" class="btn"><img src="../media/close.png"></button>
                    </div>
                </div>
            </div>

            <!-- RIGHT SIDEBAR -->
            <div id="right" class="sidebar">
                <form>
                    <div class="search">
                        <img src="../media/search.png">
                        <input class="search-input" type="search" placeholder="search">
                    </div>
                </form>
            </div>

        </main>
        <script src="lui/javascript.js"></script>
    </body>
</html>
